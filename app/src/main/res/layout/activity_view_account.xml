<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/view_account" />

        <TextView
            android:id="@+id/dynamic_user_account"
            android:gravity="center"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="29dp"
            android:background="@null"
            android:fontFamily="@font/gothica1_extrabold"
            android:inputType="textPersonName"
            android:textColor="#2F3E46"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/bank_bal"
            android:layout_width="117dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="228dp"
            android:layout_marginTop="250dp"
            android:background="@null"
            android:fontFamily="@font/rubik_semibold"
            android:gravity="end"
            android:textColor="#D9D9D9"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/upi_bal"
            android:layout_width="117dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="228dp"
            android:layout_marginTop="463dp"
            android:background="@null"
            android:gravity="end"
            android:fontFamily="@font/rubik_semibold"
            android:textColor="#D9D9D9"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/cash_bal"
            android:layout_width="117dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="228dp"
            android:layout_marginTop="677dp"
            android:background="@null"
            android:fontFamily="@font/rubik_semibold"
            android:gravity="end"
            android:textColor="#D9D9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nav_dash"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="306dp"
            android:layout_marginBottom="16dp"
            android:onClick="nav_dash"
            android:alpha="0.0" />

        <Button
            android:id="@+id/nav_expense"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="244dp"
            android:layout_marginBottom="17dp"
            android:onClick="nav_expense"
            android:alpha="0.0" />

        <Button
            android:id="@+id/nav_home"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="176dp"
            android:layout_marginBottom="17dp"
            android:onClick="nav_home"
            android:alpha="0.0" />

        <Button
            android:id="@+id/nav_income"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="18dp"
            android:onClick="nav_income"
            android:alpha="0.0" />

        <Button
            android:id="@+id/nav_profile"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="18dp"
            android:onClick="nav_profile"
            android:alpha="0.0" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>